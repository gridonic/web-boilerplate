{
    "autoprefixer": {
        "browsers": [
            "last 1 version",
            "ie >= 9",
            "android >= 4.4",
            "iOS >= 8"
        ]
    },
    "browsersync": {
        "server": {
            "baseDir": "@this.dest"
        }
    },
    "build": [
        "delete:clean",
        "styles",
        "scripts",
        "copy:fonts",
        "images",
        "sprites"
    ],
    "clean": {
        "files": "@this.dest"
    },
    "dest": "./build",
    "fonts": {
        "src": "@this.src/fonts",
        "dest": "@this.dest/assets/fonts",
        "files": ["**/*.{woff2,woff,svg,eot,ttf,otf}"]
    },
    "images": {
        "src": "@this.src/images",
        "dest": "@this.dest/assets/images",
        "files": ["**/*.{png,jpg,jpeg,gif,svg}"],
        "ignore": ["sprites/**"],
        "jpg": { "progressive": true },
        "png": { "optimizationLevel": 3 },
        "gif": { "interlaced": true },
        "svg": {}
    },
    "jade": {
        "src": "@this.src/jade",
        "dest": "@this.dest",
        "files": ["**/*.{jade}"],
        "replace": {
            "@sprite:([^,]+),([^\\s]+)": "<svg class=\"$2\"><use xmlns:xlink=\"http://www.w3.org/1999/xlink\" xlink:href=\"$1\"></use></svg>",
            "@version": "@this.version"
        }
    },
    "scripts": {
        "src": "@this.src/js",
        "dest": "@this.dest/assets/scripts",
        "files": ["*.js"],
        "watch": ["**/*.js"],
        "eslint": {}
    },
    "sprites": {
        "src": "@this.src/images/sprites",
        "dest": "@this.dest/assets/images/sprites",
        "files": ["*/*.svg"],
        "mode": {
            "inline": true,
            "symbol": true
        }
    },
    "src": "./src",
    "styles": {
        "src": "@this.src/scss",
        "dest": "@this.dest/assets/styles",
        "files": ["**/[!_]*.{sass,scss}"],
        "watch": ["**/*.{sass,scss}"]
    },
    "version": "1.0.0",
    "watch": "@this.build"
}
